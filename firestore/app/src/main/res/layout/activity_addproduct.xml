<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/wallp"
    tools:context=".AddProduct">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product code:"
            android:padding="5dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="20dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:hint="scan code"
                android:padding="5dp"
                android:fontFamily="@font/aclonica"
                android:gravity="center"
                android:textColorHint="@color/design_default_color_secondary"
                android:background="@drawable/editarea"
                android:paddingStart="15dp"
                android:id="@+id/scan_code"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/scann"
                android:layout_width="83dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:background="@drawable/ic_action_camera"
                android:text="scan"
                app:backgroundTint="#689F38" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product name:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Product name"
            android:textColor="@color/design_default_color_secondary"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:padding="10dp"
            android:background="@color/black"
            android:textSize="14dp"
            android:textColorHint="@color/cardview_light_background"
            android:id="@+id/product_name"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Category:"
            android:padding="5dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"/>

        <EditText
            android:id="@+id/category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:background="@color/black"
            android:hint="Category"
            android:padding="10dp"
            android:paddingStart="15dp"
            android:textColor="@color/design_default_color_secondary"
            android:textColorHint="@color/cardview_light_background"
            android:textSize="14dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Purchase price:"
            android:padding="5dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Purchase price"
            android:id="@+id/price"
            android:padding="10dp"
            android:background="@color/black"
            android:textSize="14dp"
            android:textColor="@color/design_default_color_secondary"
            android:textColorHint="@color/cardview_light_background"
            android:inputType="number"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sale Price:"
            android:padding="5dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Purchase price"
            android:padding="10dp"
            android:background="@color/black"
            android:textSize="14dp"
            android:textColorHint="@color/cardview_light_background"
            android:id="@+id/sale_price"
            android:inputType="number"
            android:textColor="@color/design_default_color_secondary"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Quantity:"
            android:padding="5dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="8dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Quantity"
            android:padding="10dp"
            android:background="@color/black"
            android:textSize="14dp"
            android:textColorHint="@color/cardview_light_background"
            android:id="@+id/quantity"
            android:layout_marginEnd="8dp"
            android:textColor="@color/design_default_color_secondary"
            android:inputType="number"
            android:layout_marginStart="8dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Description:"
            android:padding="5dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/description"
            android:hint="Description of the product"
            android:inputType="textMultiLine|textCapSentences"
            android:minHeight="90dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:padding="10dp"
            android:textColor="@color/design_default_color_secondary"
            android:background="@color/black"
            android:textSize="14dp"
            android:textColorHint="@color/cardview_light_background"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:padding="5dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/date"
            style="?android:spinnerStyle"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:hint="Date"
            android:onClick="openDatePicker"
            android:padding="10dp"
            android:text="JAN 01 2021"
            android:textColor="@color/design_default_color_secondary"
            android:textSize="14dp"
            app:backgroundTint="@color/white" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="save item"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:fontFamily="@font/aclonica"
            android:background="@color/cardview_light_background"
            app:backgroundTint="@color/white"
            android:id="@+id/btnsave"
            android:layout_gravity="center_horizontal"/>




    </LinearLayout>

</ScrollView>